<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="280dp"
    android:adjustViewBounds="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_ad_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ad_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:paddingLeft="@dimen/ad_title_padding"
                android:paddingTop="@dimen/ad_title_padding"
                android:paddingRight="@dimen/ad_title_padding"
                android:text="ff"
                android:textColor="@color/ad_title"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:paddingLeft="@dimen/ad_title_padding"
                android:paddingRight="@dimen/ad_title_padding"
                android:paddingBottom="5dp"
                android:text="dfd"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_price"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:paddingLeft="@dimen/ad_title_padding"
                android:paddingRight="@dimen/ad_title_padding"
                android:paddingBottom="5dp"
                android:text="vvv"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>